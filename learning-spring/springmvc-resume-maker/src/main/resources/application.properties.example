# datasource properties
spring.datasource.driver=org.postgresql.Driver
spring.datasource.url=jdbc:postgresql://127.0.0.1:5432/springmvc-resume-maker
spring.datasource.username=postgres
spring.datasource.password=postgres

# mongo datasource properties
spring.data.mongodb.uri=mongodb://mongo:mongo@127.0.0.1:27017/spring-mvc-resume-maker

# jpa properties
spring.jpa.show-sql=true
spring.jpa.format-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.persistence-unit=postgresqldb

# liquibase properties
spring.liquibase.change-log=classpath:db/migrations/changelog-master.yaml
spring.liquibase.enabled=true

# mongo liquibase properties
spring.mongo-liquibase.change-log=db/migrations/changelog-mongo-master.yaml
spring.mongo-liquibase.enabled=true

# mongo liquibase datasource properties
spring.mongo-liquibase.datasource-uri=mongodb://127.0.0.1:27017/spring-mvc-resume-maker
spring.mongo-liquibase.datasource-username=mongo
spring.mongo-liquibase.datasource-password=mongo

# data seed properties
spring.data-seed.enabled=true

# web properties
spring.mvc.static-path-pattern=/**
spring.mvc.static-path-location=classpath:static/

# view resolver (thymeleaf) properties
spring.thymeleaf.cacheable=false
spring.thymeleaf.prefix=/templates/
spring.thymeleaf.suffix=.html
